; .editorconfig

root = true

[**.js]
indent_style = space
indent_size = 2
break_chained_methods = true
space_after_anon_function = true
unescape_strings = true
jslint_happy = true

[**.json]
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.html]
;vim:max_char=78:brace_style=expand
indent_style = space
indent_size = 2
max_char = 78
brace_style = expand
